@model RegisterDto

@{
    ViewData["Title"] = "Registreren";
    Layout = null;
}

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resonance</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px 0;
        }
        .register-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            padding: 40px;
            max-width: 450px;
            width: 100%;
            margin: 20px auto;
        }
        .register-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .register-header h1 {
            color: #667eea;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <h1>🎵 Resonance</h1>
            <p class="text-muted">Maak een nieuw account aan</p>
        </div>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">📧 Email adres</label>
                <input asp-for="Email" class="form-control" placeholder="jouw@email.nl" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Wachtwoord" class="form-label">🔒 Wachtwoord</label>
                <input asp-for="Wachtwoord" type="password" class="form-control" placeholder="Minimaal 6 tekens" />
                <span asp-validation-for="Wachtwoord" class="text-danger"></span>
                <small class="form-text text-muted">Minimaal 6 tekens</small>
            </div>

            <div class="mb-3">
                <label asp-for="BevestigWachtwoord" class="form-label">🔒 Bevestig wachtwoord</label>
                <input asp-for="BevestigWachtwoord" type="password" class="form-control" placeholder="Herhaal wachtwoord" />
                <span asp-validation-for="BevestigWachtwoord" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg">✨ Account aanmaken</button>
            </div>

            <div class="text-center">
                <p class="text-muted">Heb je al een account?</p>
                <a asp-action="Login" class="btn btn-outline-secondary">Log in</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

