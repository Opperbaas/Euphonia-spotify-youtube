@model Resonance.BusinessLogicLayer.DTOs.DashboardDto

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="bi bi-speedometer2"></i> Dashboard</h1>
            <p class="text-muted">Jouw muziek- en stemmingsinzichten</p>
        </div>
    </div>

    <!-- 🎯 Profiel Status Banner -->
    @if (!Model.HeeftProfiel)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-warning alert-dismissible fade show shadow-sm" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-circle fs-1 me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Welkom! Maak je profiel aan 🎉</h5>
                            <p class="mb-2">Krijg gepersonaliseerde muziek aanbevelingen en betere inzichten door je voorkeuren in te stellen.</p>
                            <a asp-controller="ProfielView" asp-action="Create" class="btn btn-warning btn-sm">
                                <i class="bi bi-plus-circle"></i> Profiel Aanmaken
                            </a>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-check-fill text-success fs-1 me-3"></i>
                                <div>
                                    <h5 class="mb-1">Je Profiel 🎵</h5>
                                    @if (!string.IsNullOrWhiteSpace(Model.Profiel?.VoorkeurGenres))
                                    {
                                        <p class="mb-1">
                                            <strong>Favoriete Genres:</strong> 
                                            @foreach (var genre in Model.Profiel.VoorkeurGenres.Split(',').Select(g => g.Trim()))
                                            {
                                                <span class="badge bg-primary me-1">@genre</span>
                                            }
                                        </p>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(Model.Profiel?.Stemmingstags))
                                    {
                                        <p class="mb-0">
                                            <strong>Focus Stemmingen:</strong> 
                                            @foreach (var tag in Model.Profiel.Stemmingstags.Split(',').Select(t => t.Trim()))
                                            {
                                                <span class="badge bg-success me-1">@tag</span>
                                            }
                                        </p>
                                    }
                                </div>
                            </div>
                            <a asp-controller="ProfielView" asp-action="Edit" asp-route-id="@Model.Profiel?.ProfielID" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i> Bewerken
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Algemene Statistieken Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Totaal Stemmingen</h6>
                            <h2 class="mb-0">@Model.TotaalStemmingen</h2>
                        </div>
                        <i class="bi bi-emoji-smile fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Totaal Muziek</h6>
                            <h2 class="mb-0">@Model.TotaalMuziek</h2>
                        </div>
                        <i class="bi bi-music-note-list fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Gekoppelde Muziek</h6>
                            <h2 class="mb-0">@Model.TotaalGekoppeldeMuziek</h2>
                        </div>
                        <i class="bi bi-link-45deg fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Laatste Activiteit</h6>
                            <p class="mb-0 small">
                                @if (Model.LaatsteStemmingDatum.HasValue)
                                {
                                    var dagenGeleden = (DateTime.Now - Model.LaatsteStemmingDatum.Value).Days;
                                    if (dagenGeleden == 0)
                                    {
                                        <text>Vandaag</text>
                                    }
                                    else if (dagenGeleden == 1)
                                    {
                                        <text>Gisteren</text>
                                    }
                                    else
                                    {
                                        @($"{dagenGeleden} dagen geleden")
                                    }
                                }
                                else
                                {
                                    <text>Nog geen data</text>
                                }
                            </p>
                        </div>
                        <i class="bi bi-clock-history fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inzichten Section -->
    @if (Model.Inzichten.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <h5 class="mb-0 text-white"><i class="bi bi-lightbulb"></i> Jouw Persoonlijke Inzichten</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var inzicht in Model.Inzichten)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="alert alert-light border-start border-primary border-4 mb-0">
                                        <i class="bi bi-star-fill text-warning"></i> @inzicht
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- 🎯 Profiel Inzichten Section -->
    @if (Model.HeeftProfiel && Model.ProfielInzichten.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                        <h5 class="mb-0 text-white"><i class="bi bi-person-heart"></i> Profiel-Gebaseerde Inzichten</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var inzicht in Model.ProfielInzichten)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="alert alert-light border-start border-success border-4 mb-0">
                                        @if (inzicht.Contains("⚠️"))
                                        {
                                            <i class="bi bi-exclamation-triangle-fill text-warning"></i>
                                        }
                                        else if (inzicht.Contains("💡"))
                                        {
                                            <i class="bi bi-lightbulb-fill text-info"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                        }
                                        @inzicht
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- 🎵 Aanbevolen Muziek Section -->
    @if (Model.HeeftProfiel && Model.AanbevolenMuziek != null && Model.AanbevolenMuziek.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 text-white"><i class="bi bi-music-note-list"></i> 🎵 Aanbevolen Muziek</h5>
                            <span class="badge bg-white text-dark">Gebaseerd op je actieve profiel</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">
                            Deze muziek past bij je huidige stemmingsvoorkeuren: 
                            @if (!string.IsNullOrWhiteSpace(Model.Profiel?.Stemmingstags))
                            {
                                @foreach (var tag in Model.Profiel.Stemmingstags.Split(',').Take(3).Select(t => t.Trim()))
                                {
                                    <span class="badge bg-success me-1">@tag</span>
                                }
                            }
                        </p>
                        <div class="row">
                            @foreach (var muziek in Model.AanbevolenMuziek.Take(12))
                            {
                                <div class="col-md-4 col-lg-3 mb-3">
                                    <div class="card h-100 border-0 shadow-sm hover-shadow">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start mb-2">
                                                <i class="bi bi-music-note-beamed text-primary fs-3 me-2"></i>
                                                <div class="flex-grow-1">
                                                    <h6 class="card-title mb-1 fw-bold" style="font-size: 0.95rem;">@muziek.Titel</h6>
                                                    <p class="card-text text-muted mb-2" style="font-size: 0.85rem;">
                                                        <i class="bi bi-person-fill"></i> @muziek.Artiest
                                                    </p>
                                                    <span class="badge bg-info">@muziek.Bron</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.AanbevolenMuziek.Count == 0)
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> Nog geen aanbevelingen beschikbaar. 
                                Registreer stemmingen die matchen met je profiel tags om gepersonaliseerde muziek te ontdekken!
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.HeeftProfiel && (Model.AanbevolenMuziek == null || !Model.AanbevolenMuziek.Any()))
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-info shadow-sm">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle fs-3 me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Nog geen muziekaanbevelingen</h5>
                            <p class="mb-2">
                                Registreer stemmingen die matchen met je profiel tags 
                                @if (!string.IsNullOrWhiteSpace(Model.Profiel?.Stemmingstags))
                                {
                                    <span>(@Model.Profiel.Stemmingstags)</span>
                                }
                                en koppel daar muziek aan om gepersonaliseerde aanbevelingen te krijgen!
                            </p>
                            <a asp-controller="Stemming" asp-action="Create" class="btn btn-info btn-sm">
                                <i class="bi bi-plus-circle"></i> Stemming Registreren
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mb-4">
        <!-- Stemming Type Verdeling -->
        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Stemmingsverdeling</h5>
                </div>
                <div class="card-body">
                    @if (Model.StemmingTypeStatistieken.Any())
                    {
                        @foreach (var stat in Model.StemmingTypeStatistieken.OrderByDescending(s => s.Percentage))
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span><strong>@stat.TypeNaam</strong></span>
                                    <span class="badge bg-primary">@stat.Aantal keer (@stat.Percentage%)</span>
                                </div>
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar" role="progressbar" 
                                         style="width: @stat.Percentage%;" 
                                         aria-valuenow="@stat.Percentage" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        @stat.Percentage%
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Nog geen stemmingen geregistreerd</p>
                    }
                </div>
            </div>
        </div>

        <!-- Stemming Trend per Dag -->
        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-calendar-week"></i> Stemmingen per Dag</h5>
                </div>
                <div class="card-body">
                    @if (Model.StemmingTrendPerDag.Any())
                    {
                        var dagNamen = new Dictionary<DayOfWeek, string>
                        {
                            { DayOfWeek.Monday, "Maandag" },
                            { DayOfWeek.Tuesday, "Dinsdag" },
                            { DayOfWeek.Wednesday, "Woensdag" },
                            { DayOfWeek.Thursday, "Donderdag" },
                            { DayOfWeek.Friday, "Vrijdag" },
                            { DayOfWeek.Saturday, "Zaterdag" },
                            { DayOfWeek.Sunday, "Zondag" }
                        };

                        var maxAantal = Model.StemmingTrendPerDag.Max(t => t.Aantal);

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Dag</th>
                                        <th>Meest Voorkomend</th>
                                        <th>Aantal</th>
                                        <th>Trend</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var trend in Model.StemmingTrendPerDag)
                                    {
                                        var percentage = maxAantal > 0 ? (double)trend.Aantal / maxAantal * 100 : 0;
                                        <tr>
                                            <td><strong>@dagNamen.GetValueOrDefault(trend.DagVanWeek, "Onbekend")</strong></td>
                                            <td>@trend.MeestVoorkomendeeStemming</td>
                                            <td><span class="badge bg-secondary">@trend.Aantal</span></td>
                                            <td>
                                                <div class="progress" style="width: 100px; height: 20px;">
                                                    <div class="progress-bar bg-info" style="width: @percentage%"></div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nog geen data beschikbaar</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Artiesten en Meest Gekoppelde Muziek -->
    <div class="row mb-4">
        <!-- Top Artiesten -->
        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-trophy"></i> Top 5 Artiesten</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopArtiesten.Any())
                    {
                        <div class="list-group list-group-flush">
                            @for (int i = 0; i < Model.TopArtiesten.Count; i++)
                            {
                                var artiest = Model.TopArtiesten[i];
                                var medalClass = i == 0 ? "text-warning" : i == 1 ? "text-secondary" : i == 2 ? "text-danger" : "text-muted";
                                var medalIcon = i < 3 ? "bi-award-fill" : "bi-music-note";
                                
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <i class="bi @medalIcon @medalClass"></i>
                                                @artiest.Artiest
                                            </h6>
                                            <p class="mb-1 small text-muted">
                                                @artiest.AantalKoppelingen koppeling(en) · @artiest.AantalLiedjes liedje(s)
                                            </p>
                                            @if (artiest.MeestBijStemmingen.Any())
                                            {
                                                <p class="mb-0 small">
                                                    <i class="bi bi-heart text-danger"></i>
                                                    Vooral bij: @string.Join(", ", artiest.MeestBijStemmingen)
                                                </p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nog geen artiesten gekoppeld</p>
                    }
                </div>
            </div>
        </div>

        <!-- Meest Gekoppelde Muziek -->
        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-star"></i> Meest Gekoppelde Nummers</h5>
                </div>
                <div class="card-body">
                    @if (Model.MeestGekoppeldeMuziek.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var muziek in Model.MeestGekoppeldeMuziek)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-music-note-beamed text-primary fs-4 me-3"></i>
                                        <div>
                                            <h6 class="mb-0">@muziek.Titel</h6>
                                            <small class="text-muted">@muziek.Artiest</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nog geen muziek gekoppeld</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Muziek-Stemming Correlaties -->
    @if (Model.MuziekStemmingCorrelaties.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-diagram-3"></i> Muziek & Stemming Verbindingen</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Nummer</th>
                                        <th>Artiest</th>
                                        <th>Stemming</th>
                                        <th>Aantal Koppelingen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var correlatie in Model.MuziekStemmingCorrelaties.Take(10))
                                    {
                                        <tr>
                                            <td><i class="bi bi-music-note text-primary"></i> @correlatie.MuziekTitel</td>
                                            <td>@correlatie.Artiest</td>
                                            <td><span class="badge bg-info">@correlatie.StemmingType</span></td>
                                            <td><span class="badge bg-success">@correlatie.AantalKeerGekoppeld×</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Snelle Acties</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-flex">
                        <a asp-controller="Stemming" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Nieuwe Stemming
                        </a>
                        <a asp-controller="MuziekView" asp-action="Create" class="btn btn-success">
                            <i class="bi bi-music-note-beamed"></i> Muziek Toevoegen
                        </a>
                        <a asp-controller="Stemming" asp-action="Index" class="btn btn-info">
                            <i class="bi bi-list-ul"></i> Mijn Stemmingen
                        </a>
                        <a asp-controller="MuziekView" asp-action="Index" class="btn btn-warning">
                            <i class="bi bi-collection"></i> Mijn Muziek
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .card {
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .progress {
        background-color: #e9ecef;
    }
    
    .progress-bar {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    }
</style>

