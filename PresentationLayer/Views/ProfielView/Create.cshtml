@model CreateProfielDto

@{
    ViewData["Title"] = "Nieuw Profiel";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>‚ûï Nieuw Profiel Aanmaken</h1>
    <a asp-action="Index" class="btn btn-secondary">‚ùå Annuleren</a>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- UserID wordt automatisch ingevuld vanuit sessie -->

            <div class="mb-3">
                <label asp-for="VoorkeurGenres" class="form-label">Voorkeur Genres</label>
                <small class="form-text text-muted d-block mb-2">Selecteer maximaal 5 genres</small>
                <select id="genreSelect" class="form-select" multiple size="10">
                    <option value="Pop">Pop</option>
                    <option value="Rock">Rock</option>
                    <option value="Hip Hop">Hip Hop</option>
                    <option value="R&B">R&B</option>
                    <option value="Jazz">Jazz</option>
                    <option value="Classical">Classical</option>
                    <option value="Electronic">Electronic</option>
                    <option value="Country">Country</option>
                    <option value="Reggae">Reggae</option>
                    <option value="Blues">Blues</option>
                    <option value="Metal">Metal</option>
                    <option value="Folk">Folk</option>
                    <option value="Latin">Latin</option>
                    <option value="Soul">Soul</option>
                    <option value="Funk">Funk</option>
                    <option value="Disco">Disco</option>
                    <option value="Indie">Indie</option>
                    <option value="Alternative">Alternative</option>
                    <option value="Punk">Punk</option>
                    <option value="K-Pop">K-Pop</option>
                </select>
                <input type="hidden" asp-for="VoorkeurGenres" id="genreHiddenInput" />
                <div id="selectedGenres" class="mt-2"></div>
                <span asp-validation-for="VoorkeurGenres" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Stemmingstags" class="form-label"></label>
                <input asp-for="Stemmingstags" class="form-control" placeholder="bijv. Vrolijk, Ontspannen, Energiek" />
                <span asp-validation-for="Stemmingstags" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">üíæ Opslaan</button>
                <a asp-action="Index" class="btn btn-secondary">‚ùå Annuleren</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const genreSelect = document.getElementById('genreSelect');
            const hiddenInput = document.getElementById('genreHiddenInput');
            const selectedGenresDiv = document.getElementById('selectedGenres');
            const maxGenres = 5;
            const form = genreSelect.closest('form');

            // Initialiseer hidden input als leeg
            hiddenInput.value = '';

            genreSelect.addEventListener('change', function() {
                updateSelectedGenres();
            });

            // Voor submit: valideer dat er genres zijn geselecteerd
            form.addEventListener('submit', function(e) {
                updateSelectedGenres();
                
                if (!hiddenInput.value || hiddenInput.value.trim() === '') {
                    e.preventDefault();
                    alert('Selecteer minimaal 1 genre');
                    return false;
                }
            });

            function updateSelectedGenres() {
                const selectedOptions = Array.from(genreSelect.selectedOptions);
                
                // Limiteer tot 5 genres
                if (selectedOptions.length > maxGenres) {
                    alert(`Je kunt maximaal ${maxGenres} genres selecteren`);
                    // Deselecteer de laatste
                    selectedOptions[selectedOptions.length - 1].selected = false;
                    return;
                }

                // Update hidden input met comma-separated waarden
                const genres = selectedOptions.map(opt => opt.value);
                hiddenInput.value = genres.join(', ');

                // Toon geselecteerde genres als badges
                selectedGenresDiv.innerHTML = genres.length > 0 
                    ? '<strong>Geselecteerd:</strong> ' + genres.map(g => 
                        `<span class="badge bg-primary me-1">${g}</span>`
                    ).join('')
                    : '';
            }
        });
    </script>
}
