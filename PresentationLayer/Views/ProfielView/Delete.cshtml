@model ProfielDto

@{
    ViewData["Title"] = "Verwijder Profiel";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>🗑️ Verwijder Profiel</h1>
    <a asp-action="Index" class="btn btn-secondary">❌ Annuleren</a>
</div>

<h3 class="text-danger">Weet je zeker dat je dit profiel wilt verwijderen?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ProfielID)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ProfielID)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class="col-sm-9">
            @(Model.UserID?.ToString() ?? "-")
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.VoorkeurGenres)
        </dt>
        <dd class="col-sm-9">
            @(Model.VoorkeurGenres ?? "-")
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Stemmingstags)
        </dt>
        <dd class="col-sm-9">
            @(Model.Stemmingstags ?? "-")
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProfielID" />
        <button type="submit" class="btn btn-danger">⚠️ Ja, Verwijderen</button>
        <a asp-action="Index" class="btn btn-secondary">❌ Annuleren</a>
    </form>
</div>

