@model IEnumerable<ProfielDto>

@{
    ViewData["Title"] = "Profielen";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>üë§ Profielen</h1>
    <a asp-action="Create" class="btn btn-success">‚ûï Nieuw Profiel</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<hr />

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Voorkeur Genres</th>
                    <th>Stemmingstags</th>
                    <th>Status</th>
                    <th class="text-end">Acties</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.IsActive ? "table-success" : "")">
                        <td>@item.ProfielID</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.VoorkeurGenres))
                            {
                                @foreach (var genre in item.VoorkeurGenres.Split(',').Take(3))
                                {
                                    <span class="badge bg-primary me-1">@genre.Trim()</span>
                                }
                                @if (item.VoorkeurGenres.Split(',').Length > 3)
                                {
                                    <span class="badge bg-secondary">+@(item.VoorkeurGenres.Split(',').Length - 3)</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Stemmingstags))
                            {
                                @foreach (var tag in item.Stemmingstags.Split(',').Take(3))
                                {
                                    <span class="badge bg-success me-1">@tag.Trim()</span>
                                }
                                @if (item.Stemmingstags.Split(',').Length > 3)
                                {
                                    <span class="badge bg-secondary">+@(item.Stemmingstags.Split(',').Length - 3)</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">‚úì Actief</span>
                            }
                            else
                            {
                                <form asp-action="SetActive" asp-route-id="@item.ProfielID" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-primary">Activeer</button>
                                </form>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.ProfielID" class="btn btn-sm btn-info">‚ÑπÔ∏è Details</a>
                            <a asp-action="Edit" asp-route-id="@item.ProfielID" class="btn btn-sm btn-primary">‚úèÔ∏è Bewerken</a>
                            <a asp-action="Delete" asp-route-id="@item.ProfielID" class="btn btn-sm btn-danger">üóëÔ∏è Verwijderen</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>Geen profielen gevonden. <a asp-action="Create">Voeg een nieuw profiel toe</a>.</p>
    </div>
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">üîô Terug naar Home</a>
</div>
